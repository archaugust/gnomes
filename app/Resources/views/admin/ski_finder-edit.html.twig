{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends 'base_admin.html.twig' %}
{% block title %}Ski Finder - Search Tags{% endblock %}
{% block content %}
<div class="content">
    {{ form_start(form) }}
    {{ form_errors(form) }}
	<div class="content-header">
		<span><i class="fa fa-fw fa-search-plus"></i> Ski Finder / </span> <a href="{{ path('admin_ski_finder') }}">Skis</a> / Ski Finder Tags
		<div class="pull-right">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
	</div>
	<div class="content-body">
   	    {{ include('alerts.html.twig') }}
		<div class="arch-table">
			<div class="header">
				<a href="{{ path('admin_product_edit', {'id':item.id}) }}" class="active">{{ item.baseName }}</a>
			</div>
			<div class="details">
				<p>Tick all boxes this Ski will match to.</p> 
			    {{ form_row(form.technical_ability) }}
			    {{ form_row(form.experience) }}
			    {{ form_row(form.approach) }}
			    {{ form_row(form.favourite_hangouts) }}
			    {{ form_row(form.favourite_flavour) }}
			    {{ form_row(form.specialist) }}
			    {{ form_row(form.fat_or_skinny) }}
  			    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
   			    <a href="{{ path('admin_ski_finder') }}" class="btn btn-default">Cancel</a>
			</div>
		</div>
	</div>
	{{ form_end(form) }}
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(function(){
	$('#menu-ski-finder').addClass('active');
	$('#sub-menu-ski-finder').removeClass('hidden');
	$('#submenu-ski-finder').addClass('active');
});
</script>
{% endblock %}