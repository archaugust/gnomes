{% extends 'base.html.twig' %}
{% block title %}Wishlist | Gnomes Alpine Sports{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('css/member.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="o-layout--flush c-page u-ph-25-xs">
	<div class="c-breadcrumbs">
		<a href="/">Home</a> / <a href="{{ path('member') }}">VIP Customer Page</a> / Profile 
	</div>
	{% include('flash.html.twig') %}
	<div class="o-layout--flush c-page--member u-ml-60">
		<div class="o-layout__item u-1/4@desktop u-1/2@tablet u-1/1@mobile u-pl-60">
			{% include('member/menu.html.twig') %}
		</div><div class="o-layout__item u-3/4@desktop u-1/2@tablet u-1/1@mobile u-pl-60">
			<div class="o-layout--flush">
				<div class="o-layout__item u-3/4@desktop u-1/2@tablet u-1/1@mobile">
					<h1>YOUR PROFILE</h1>
				</div><div class="o-layout__item u-1/4@desktop u-1/2@tablet u-1/1@mobile">
					<div class="u-right"><a href="{{ path('member_profile_edit') }}" class="c-btn c-btn--gray c-btn--wide">Update Profile</a></div>
				</div>
			</div>
    		<hr />
			<div class="o-layout--flush">
				<div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Name</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
					{{ item.fullName }}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Email</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
				    {{ item.email }}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Phone</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
                    {{ item.phone }}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Mobile</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
                    {{ item.mobile }}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Fax</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
                    {{ item.fax }}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Website</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
                    {{ item.website }}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>DOB</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
                    {% if item.dateOfBirth %}{{ item.dateOfBirth|date('j F Y') }}{% endif %}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Gender</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
                    {{ render(controller('ShopBundle:Action:getSex', { 'code': item.sex })) }}
				</div>
			</div>
			<hr />
			<div class="o-layout--flush">
				<div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Physical Address</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
					{% if item.physicalAddress1 != null %}
				        {{ item.physicalAddress1 }}<br />
				    {% endif %}
					{% if item.physicalAddress2 != null %}
				        {{ item.physicalAddress2 }}<br />
				    {% endif %}
					{% if item.physicalSuburb != null %}
				        {{ item.physicalSuburb }}<br />
				    {% endif %}
					{% if item.physicalCity != null %}
				        {{ item.physicalCity }}<br />
				    {% endif %}
					{% if item.physicalState != null %}
				        {{ item.physicalState }}<br />
				    {% endif %}
					{% if item.physicalPostcode != null %}
				        {{ item.physicalPostcode }}<br />
				    {% endif %}
					{% if item.physicalCountryId != null %}
				        {{ render(controller('ShopBundle:Action:getCountryName', { 'code': item.physicalCountryId })) }}<br />
				    {% endif %}
				</div><div class="o-layout__item u-1/5@desktop u-1/3@tablet u-1/2@mobile">
					<b>Postal Address</b>
				</div><div class="o-layout__item u-4/5@desktop u-2/3@tablet u-1/2@mobile">
					{% if item.postalAddress1 != null %}
				        {{ item.postalAddress1 }}<br />
				    {% endif %}
					{% if item.postalAddress2 != null %}
				        {{ item.postalAddress2 }}<br />
				    {% endif %}
					{% if item.postalSuburb != null %}
				        {{ item.postalSuburb }}<br />
				    {% endif %}
					{% if item.postalCity != null %}
				        {{ item.postalCity }}<br />
				    {% endif %}
					{% if item.postalState != null %}
				        {{ item.postalState }}<br />
				    {% endif %}
					{% if item.postalPostcode != null %}
				        {{ item.postalPostcode }}<br />
				    {% endif %}
					{% if item.postalCountryId != null %}
				        {{ render(controller('ShopBundle:Action:getCountryName', { 'code': item.postalCountryId })) }}<br />
				    {% endif %}
				</div>
			</div>
        </div>
	</div>
</div>

{% endblock %}