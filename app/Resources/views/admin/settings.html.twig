{% extends 'base_admin.html.twig' %}
{% block title %}Settings / Vend API Integragtion{% endblock %}
{% block menu_sub %}
	{{ include('admin/submenu_settings.html.twig') }}
{% endblock %}
{% block content %}
<div class="content">
   	<form method="POST">
	<div class="content-header">
		<span><i class="fa fa-fw fa-cogs"></i> Settings / </span>{{ title }}
		<div class="pull-right"><input type="submit" class="btn btn-primary" value="Save" /></div>
	</div>
   	<div class="content-body">
   	    {{ include('alerts.html.twig') }}
    	<div class="row">
    		<div class="col-md-6">
            	<div class="arch-table">
            		<div class="details">
                    {% if mode == 'vend-api' %}<p class="mb-15"><b>WARNING: </b>Incorrect settings can break the site's connection to the Vend API.</p>{% endif %}
                	{% for field in config %}
                		<div class="mb-15">
                		<label for="{{ field.name }}">{{ field.title }}</label>
                		<input type="text" name="{{ field.name }}" id="{{ field.name }}" value="{{ field.value }}" class="form-control" />
                		{% if field.description is not empty %}
                			<span class="small">{{ field.description }}</span>
                		{% endif %}
                		</div>
                	{% endfor %}
                		<input type="submit" class="btn btn-primary" value="Save" />
            		</div>
            	</div>
    		</div>
    	</div>
	</div>
   	</form>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
$(function(){
	$('#menu-settings').addClass('active');
	$('#submenu-{{ mode }}').addClass('active');
})
</script>
{% endblock %}