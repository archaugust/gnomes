{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends 'base_admin.html.twig' %}
{% block title %}Brands - Edit{% endblock %}
{% block content %}
<div class="content">
    {{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}
    {{ form_errors(form) }}
	<div class="content-header">
		<span><i class="fa fa-fw fa-tags"></i> <a href="{{ path('admin_product') }}">Products</a> / <a href="{{ path('admin_brand') }}">Brands</a> / </span> {{ item.name }}
		<div class="pull-right">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
	</div>
	<div class="content-body">
   	    {{ include('alerts.html.twig') }}
		<div class="arch-table">
			<div class="details" id="details">
				<div class="row">
					<div class="col-md-8">
                  		<div class="row">
                  			<div class="col-md-6">
                                {{ form_row(form.name, {'attr':{'readonly':'readonly'}}) }}
                  			</div>
                  			<div class="col-md-6">
                                {{ form_row(form.is_active) }}
                  			</div>
                  		</div>
                  		<div class="row">
                  			<div class="col-md-6">
                                {{ form_row(form.handle) }}
                  			</div>
                  		</div>
                        {{ form_row(form.description) }}
                        {{ form_row(form.meta_title) }}
                        {{ form_row(form.meta_description) }}
                  		<div class="row">
                  			<div class="col-md-12">
                  			    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }} 
                  			    <a href="{{ path('admin_brand') }}" class="btn btn-default">Close</a>
                  			</div>
                  		</div>
					</div>
        			<div class="col-md-4">
                        {{ form_row(form.image) }}
                   		{% if item.image %}
       						<img src="{{ asset('images/brands/'~ item.image) }}" class="img-responsive mb-15" alt="{{ item.name }}" />
                   		{% endif %}
        			</div>
				</div>
  			</div>
		</div>
	</div>
    {{ form_end(form) }}
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
$(function(){
	$('#menu-products').addClass('active');
	$('#sub-menu-products').removeClass('hidden');
	$('#submenu-brands').addClass('active');
});
</script>
{% endblock %}