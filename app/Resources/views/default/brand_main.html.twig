{% extends 'base.html.twig' %}
{% block title %}{% if item.metaTitle %}{{ item.metaTitle }}{% else %}Brands | Gnomes Alpine Sports{% endif %}{% endblock %}
{% block description %}{% if item.metaDescription %}{{ item.metaDescription }}{% else %}{{ item.intro|striptags|slice(0,160) }}{% endif %}{% endblock %}
{% block stylesheets %}<link href="{{ asset('css/brands.css') }}" rel="stylesheet" />{% endblock %}

{% block content %}
<div class="o-layout--flush">
	<div class="c-breadcrumbs">
		<a href="/">Home</a> / Brands
	</div>
	<div class="u-pt-30">{{ item.intro|raw }}</div>
</div>
<form method="post">
<div class="o-layout--flush o-layout-center o-brands">
	{% for item in items %}<div class="o-layout__item u-1/3@desktop u-1/2@tablet u-1/1@mobile">
		<a href="{{ path('collection', {'handle': item.handle}) }}"><img src="{{ asset('images/brands/thumb/'~ item.image) }}" alt="{{ item.name }}" class="u-tooltip" title="{{ item.name }}" /></a>
	</div>{% endfor %}
</div>
</form>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/collection.js') }}"></script>
	<script src="{{ asset('js/wishlist.js') }}"></script>
	<script src="{{ asset('js/notify.min.js') }}"></script>
{% endblock %}